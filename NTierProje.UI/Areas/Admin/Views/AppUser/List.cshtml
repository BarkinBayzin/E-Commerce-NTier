@using PagedList;
@using PagedList.Mvc;
@model IPagedList<NTier.Model.Entities.AppUser>

@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_SharedAdminLayout.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Surname
        </th>
        <th>
            UserName
        </th>
        <th>
            Password
        </th>
        <th>
            Email
        </th>
        <th>
            Address
        </th>
        <th>
            PhoneNumber
        </th>
        <th>
            Role
        </th>
        <th>
            Image
        </th>


        <th colspan="2">Edit / Delete</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Surname
            </td>
            <td>
                @item.UserName
            </td>
            <td>
                @item.Password
            </td>
            <td>
                @item.Email
            </td>
            <td>
                @item.Address
            </td>
            <td>
                @item.PhoneNumber
            </td>
            <td>
                @item.Role
            </td>
            <td>
                <img src="@item.ImagePath" style="display:block;" width="30" height="30" />

            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
